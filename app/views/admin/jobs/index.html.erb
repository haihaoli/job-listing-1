<h2>Admin_Panel</h2>

<div class="pull-right">
  <%= link_to("Add a job", new_admin_job_path, :class => "btn btn-primary") %>
</div>

<%= form_tag bulk_update_admin_jobs_path, :class => "form-inline" do %>
<table class="table table-hover">
  <tr>
    <th><%= check_box_tag "全选", "1", false, :id => "toggle_all" %></th>
    <th>Job Title</th>
    <th>Action</th>
    <th>Resume</th>
    <th>Created_at</th>
  </tr>
  <% @jobs.each do |job| %>
  <tr>
      <td>
        <%= check_box_tag "ids[]", job.id %>
      </td>
      <td>
        <%= job_status(job) %>
        <%= link_to job.title, admin_job_path(job) %>
      </td>
      <td><%= link_to("Edit", edit_admin_job_path(job), :class => "btn btn-xs btn-warning") %> |
          <%= link_to("Destroy", admin_job_path(job), method: :delete , :class => "btn btn-xs btn-danger")%> |
          <% if job.is_hidden? %>
            <%= link_to("Public", public_admin_job_path(job), method: :post, :class => "btn btn-xs btn-default") %>
          <% else %>
            <%= link_to("Hidden", hide_admin_job_path(job), method: :post, :class => "btn btn-xs btn-default") %>
          <% end %>
      </td>
      <td><%= job.resumes.count %></td>
      <td><%= job.created_at %></td>
  </tr>
  <% end %>
</table>

<p>
  <%= submit_tag "批次删除", :class => "btn btn-danger", :data => { :confirm => "Are you sure?" } %>
</p>

<% end %>

<script>
  $("#toggle_all").click(function(){
    if ( $(this).prop("checked") ) {
      $("input[name='ids[]']").prop("checked", true);
    } else {
      $("input[name='ids[]']").prop("checked", false);
    }
  })
</script>
