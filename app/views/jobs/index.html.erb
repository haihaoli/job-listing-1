<div class="pull-right clearfix dropdown">
    <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      排序
        <b class="caret"></b>
    </button>

    <ul class="dropdown-menu">
      <li><%= link_to "按薪资下限排序", jobs_path(:order => "by_lower_bound" )%></li>
      <li><%= link_to "按薪资上限排序", jobs_path(:order => "by_upper_bound" )%></li>
      <li><%= link_to "按发表时间排序", jobs_path(:order => "created_at DESC" )%></li>
    </ul>
</div>

<table class="table table-hover">
  <tr>
    <th>职缺</th>
    <th>薪资下限</th>
    <th>薪资上限</th>
    <th>刊登时间</th>
  </tr>
  <% @jobs.each do |job| %>
  <tr>
      <td><%= link_to job.title, job_path(job) %></td>
      <td><%= job.wage_lower_bound %></td>
      <td><%= job.wage_upper_bound %></td>
      <td><%= job.created_at %></td>
  </tr>
  <% end %>
</table>
