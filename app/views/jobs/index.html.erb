<div class="pull-right">
  <%= link_to("Add a job", new_job_path, :class => "btn btn-primary") %>
</div>

<table class="table table-hover">
  <tr>
    <th>Job Title</th>
    <th>Action</th>
    <th>Created_at</th>
  </tr>
  <% @jobs.each do |job| %>
  <tr>
      <td><%= link_to job.title, job_path(job) %></td>
      <td><%= link_to("Edit", edit_job_path(job), :class => "btn btn-xs btn-warning") %> |
          <%= link_to("Destroy", job_path(job), method: :delete , :class => "btn btn-xs btn-danger")%>
      </td>
      <td><%= job.created_at %></td>
  </tr>
  <% end %>
</table>
